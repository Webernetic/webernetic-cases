{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    "arrow-parens": ["error", "always"],
    "max-len": ["error", 140, 2],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-tabs": ["error", { "allowIndentationTabs": false }]
  }
}
